<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/main.css" />
    <title>Pokemon Show Page</title>
  </head>

  <body>
    <%- include('../partials/_nav') %>
    <div class="show_container">
      <div class="pokemon_stats">
        <h1 class="pokemon_name" style="font-size: xx-large;">
          <u> <%= pokemon.name %></u>
        </h1>
        <h4>National Dex: <%= pokemon.id %></h4>
        <img
          src="https://img.pokemondb.net/sprites/home/normal/<%= pokemon.name %>.png"
          alt="<%= pokemon.name %>"
        />
        <div>
          <h2><u>Size</u></h2>
          <p>Height: <%= pokemon.height %></p>
          <p>Weight: <%= pokemon.weight %></p>
        </div>
        <div>
          <h2><u>Types:</u></h2>
          <% pokemon.types.forEach((type) => { %>
          <p><%= type.type.name %></p>
          <% }) %>
        </div>
        <div>
          <h2><u> Base Stats</u></h2>
          <% pokemon.stats.forEach((stat) => { %>
          <div>
            <%= stat.stat.name %> : <%= stat.base_stat %>
          </div>
          <% }) %>
        </div>
      </div>
      <h2 style="font-size: xx-large; color: #00aae9;"><u> Moves</u></h2>
      <div class="moves_container">
        <% pokemon.moves.forEach((move) => { %>
        <p>&nbsp; <%= move.move.name %> |</p>
        <% }) %>
      </div>
    </div>
  </body>
</html>
